# サーバー設定
PORT=8080
NODE_ENV=development

# データベース設定
MONGODB_URI=mongodb://localhost:27017/dailyfortune
DB_NAME=dailyfortune

# Firebase Admin設定 - Base64エンコードも可能
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n","client_email":"service-account@your-project.iam.gserviceaccount.com","client_id":"client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/service-account%40your-project.iam.gserviceaccount.com"}
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# または個別の環境変数として設定する場合
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL=your-client-email

# Claude AI API設定
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_API_MODEL=claude-3-7-sonnet-20250219
CLAUDE_API_MAX_TOKENS=4096
CLAUDE_API_TEMPERATURE=0.7

# システム設定
FORTUNE_UPDATE_HOUR=3
MAX_CHAT_HISTORY=50
AI_REQUEST_RATE_LIMIT=100
USE_ENHANCED_FORTUNE_ALGORITHM=false

# 拡張版運勢計算設定
# 拡張版運勢スコア計算アルゴリズムを有効にするかどうか
# true: 有効, false: 無効（デフォルト）

# API設定
API_BASE_URL=http://localhost:8080/api/v1
LOG_LEVEL=debug

# CORS設定
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# セキュリティ設定
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=30d
